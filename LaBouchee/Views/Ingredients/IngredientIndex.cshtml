@model List<LaBouchee.Models.IngredientsViewModel>

@{
    ViewData["Title"] = "Ingredients";
}
<h3>ViewData["Title"] = "Ingredients";</h3>
<hr />
<form>
    <button asp-action="Create" asp-controller="Ingredient" class="btn btn-primary">Create Ingredient</button>
    <table class="table table-responsive table-hover">
        <thead>
            <tr class="table-active">
                <th>Id</th>
                <th>Ingredient name</th>
                <th>Ingredient description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if(Model !=null&&Model.Any())
            {
                @foreach(var ingredient in Model)
                {
                    <tr>
                        <td>@ingredient.Id</td>
                        <td>@ingredient.Ingredient</td>
                        <td>@ingredient.Description</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-controller="Ingredient" asp-action="Edit" asp-route-id="@ingredient.Id" class="btn btn-primary">Edit</a>
                                <a asp-controller="Ingredient" asp-action="Delete" asp-route-id="@ingredient.Id" class="btn btn-danger">Delete</a>

                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6">
                        <div>
                            No Ingredients available at the moment!
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>