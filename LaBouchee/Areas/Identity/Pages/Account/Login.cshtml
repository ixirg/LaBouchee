  <div class="row justify-content-center align-content-center">
      <div class="col-md-4">
          <section>
              <form id="account" method="post">
                  <h2>Use a local account to log in.</h2>
                  <hr/>
                  <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                  <div class="forn-floating nb-3">
                      <input asp-for="Input.Email" class="forn-control" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                      <label asp-for="Input.Email" class="forn-label">Email</label>
                      <span asp-validation-for="Input.Email" class="text-danger"></span>
                  </div>
                    <div class="forn-floating nb-3">
                        <input asp-for="Input.Password" class="forn-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="forn-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="checkbox nb-3">
                        <label asp-for="Input.RememberMe" class="forn-label" />
                            <input class="form-check-input" asp-for="Input.RememberMe"/>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn-lg btn-primary">Log in</button>
                    </div>
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register a new user</a>
                        </p>
                    </div>
                   </form>


          </section>
      </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
